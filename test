public static Map<String, List<String>> createGroupToMnemonicMap(Set<String> userDetails) {
        Map<String, List<String>> groupToMnemonicMap = new HashMap<>();
        Map<String, String> mnemonicToGroupMap = new HashMap<>();
        
        for (String userDetail : userDetails) {
            String[] parts = userDetail.split(":");
            if (parts.length == 2) {
                String mnemonic = parts[0];
                String group = parts[1];

                if (group.equalsIgnoreCase("BUSINESS")) {
                    group = "APPOWNER"; // Change BUSINESS to APPOWNER
                }

                if (mnemonicToGroupMap.containsKey(mnemonic) && mnemonicToGroupMap.get(mnemonic).equals("TECHMEMBER")) {
                    // Remove mnemonic from TECHMEMBER list
                    groupToMnemonicMap.get("TECHMEMBER").remove(mnemonic);
                }

                mnemonicToGroupMap.put(mnemonic, group);

                groupToMnemonicMap.computeIfAbsent(group, k -> new ArrayList<>()).add(mnemonic);
            }
        }

        return groupToMnemonicMap;
    }
